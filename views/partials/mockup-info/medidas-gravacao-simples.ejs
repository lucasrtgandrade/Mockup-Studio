<div class="label-input">
    <h2>Medidas Arte</h2>

    <div class="label-input__elementos">

        <label for="alturaGravacao">Altura da arte:</label>
        <input type="number"
               id="alturaGravacao"
               data-max-altura="<%= dimensoes.Altura %>">

        <div class="label-input__feedback">
            <img src="imagens/icones/info.svg"
                 alt="icone de informação"
                 class="label-input__icone"
                 id="alturaIcone">
            <span id="alturaFeedback">Altura máx de <%= dimensoes.Altura%>mm</span>
        </div>


        <label for="larguraGravacao">largura da arte:</label>
        <input type="number"
               id="larguraGravacao"
               data-max-largura="<%= dimensoes.Largura %>">
        <div class="label-input__feedback">
            <img src="imagens/icones/info.svg"
                 alt="icone de informação"
                 class="label-input__icone"
                 id="larguraIcone">
            <span id="larguraFeedback">Largura máx de <%= dimensoes.Largura%>mm</span>
        </div>
    </div>
</div>